<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menuButtonText">

    <Button
        android:id="@+id/bottomButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@color/menuButton"
        android:clickable="false"
        android:enabled="false"
        android:onClick="clickBottom"
        android:padding="48dp"
        android:text="@string/button_player_1"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <Button
        android:id="@+id/topButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="24dp"
        android:background="@color/menuButton"
        android:clickable="false"
        android:enabled="false"
        android:onClick="clickTop"
        android:padding="48dp"
        android:rotation="180"
        android:text="@string/button_player_1"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/bottomText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/bottomButton"
        android:layout_centerInParent="true"
        android:layout_marginTop="-43dp"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/topText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/topButton"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-43dp"
        android:rotation="180"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

</RelativeLayout>